{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@common/*": ["./src/common/*"],
      "@f/*": ["./src"],
      "@v1/*": ["./src/v1/*"],
      "@v2/*": ["./src/v2/*"]
    },
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
